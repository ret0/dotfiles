[ui]
username = Thomas Tardy <tardy@mptechnology.ch>
# username = tardy@mptechnology.ch
ignore = ~/.hgignore

[hooks]
precommit = python:.hg/rename-story-description.py:prefix_commit_message

[extensions]
rebase =
eol =
color =
progress =

[eol]
native = LF
only-consistent = False

[color]
# valid modes are win32, ansi, auto, off
mode = auto

[alias]
pull = pull --rebase
